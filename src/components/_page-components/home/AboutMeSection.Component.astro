---
import { t } from "i18next";

import IconComponent from "@components/Icon";
import TypographyComponent from "@components/Typography";

import profileImage from "../../../assets/profile.jpg";
import ButtonComponent from "@components/Button";
---

<section id="about-me" class="section about-me">
  <div class="section-content">
    <div class="title-wrapper">
      <div class="title-typography">
        <div class="title-underline"></div>
        <TypographyComponent color="var(--foreground)" variant="h1-sans"
          >{t("aboutMe.sectionTitle")}</TypographyComponent
        >
      </div>
    </div>

    <div class="about-me-info">
      <img
        width="200px"
        height="228px"
        class="about-me-img"
        src={profileImage}
        alt=""
      />

      <div>
        <div class="about-me-description-wrapper">
          <TypographyComponent
            color="var(--foreground)"
            variant="body"
            textAlign="justify">{t("aboutMe.description")}</TypographyComponent
          >
        </div>

        <div class="about-me-social-icons-wrapper">
          <ButtonComponent
            redirectTo="https://www.linkedin.com/in/vinicius-rodrigues-aro/"
            redirectTarget="_blank"
            id="linkedin-about-me-button"
            variant="text"
            class="social-icon-anchor"
          >
            <IconComponent
              color="var(--foreground, black)"
              size={32}
              name="linkedin"
            />
          </ButtonComponent>

          <ButtonComponent
            redirectTo="https://github.com/viniciusrodrigues1a/"
            redirectTarget="_blank"
            id="github-about-me-button"
            variant="text"
            class="social-icon-anchor"
          >
            <IconComponent
              color="var(--foreground, black)"
              size={32}
              name="github"
            />
          </ButtonComponent>

          <ButtonComponent
            redirectTo="mailto:viniciusrodrigues.aro@gmail.com"
            redirectTarget="_blank"
            id="email-about-me-button"
            variant="text"
            class="social-icon-anchor"
          >
            <IconComponent
              color="var(--foreground, black)"
              size={32}
              name="mail"
            />
          </ButtonComponent>
        </div>
      </div>
    </div>
  </div>
</section>
